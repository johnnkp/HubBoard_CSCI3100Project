    "@reduxjs/toolkit": "^1.7.2",
    "apidoc-markdown": "^7.0.4",
    "bcryptjs": "^2.4.3",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "concurrently": "^7.0.0",
    "connect-mongo": "^4.6.0",
    "dotenv": "^16.0.0",
    "email-validator": "^2.0.4",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "mocha": "^9.2.2",
    "mocha-steps": "^1.3.0",
    "mongoose": "^6.2.1",
